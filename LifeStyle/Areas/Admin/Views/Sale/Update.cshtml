@model Business.ViewModels.Home.SaleVM
@{
    ViewData["Title"] = "Update";
}


    <div style="padding-top: 10% !important" class="col-8 container">
        <form style="padding: 10%" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title">Endirim başlığı</label>
                <input asp-for="Title" style="text-transform: none" class="form-control"></input>
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Endirim mövzusu</label>
                <input asp-for="Description" style="text-transform: none" class="form-control"></input>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time">Endirim tarixi</label>
                <input asp-for="Time" class="form-control"></input>
                <span class="text-danger" asp-validation-for="Time"></span>

            </div>
            <button type="submit" class="btn btn-success">Yenilə</button>
        </form>
    </div>
