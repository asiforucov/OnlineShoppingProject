                        @foreach (var item in Model.GenderCategory)
                        {
                            <li class="nav-item">
                                <a class="nav-link " id="arrivals-tab" data-toggle="tab" href="#@item.Name" role="tab" aria-controls="arrivals" aria-selected="true"><i class="icon icon-home"></i>@item.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-12">
                <div class="tab-content products-style-4">

                    <div class="tab-pane fade show  active" id="@Model.GenderCategory[0].Name" role="tabpanel" aria-labelledby="arrivals-tab">
