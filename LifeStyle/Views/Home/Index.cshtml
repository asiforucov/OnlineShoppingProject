                                            <div class="hover-option">
                                                <ul class="hover-icon">
                                                    <li><a asp-controller="ProductBFOS" asp-action="SetBasket" asp-route-id="@item.Id"><i class="fa fa-shopping-cart"></i></a></li>
                                                    <li><a asp-controller="ProductBFOS" asp-action="SetFavorite" asp-route-id="@item.Id"><i class="fa fa-heart"></i></a></li>
                                                    <li><a asp-controller="Product_detail" asp-action="Index" asp-route-id="@item.Id" class="quickview-popup-link"><i class="fa fa-eye"></i></a></li>

                                                </ul>
                                            </div>
                                        </div>
                                        <div class="product-info common-cart-info">
                                            <a asp-controller="Product_detail" asp-action="Index" asp-route-id="@item.Id" class="cart-name">@item.Name</a>
                                            <p class="cart-price">₼ @item.Price</p>
                                        </div>
                                    </div>
                                </div>

                            }
                        </div>
                        <div class="show-more-btn">
                            <a href="" class="btn btn-primary ">Daha çox göstər</a>
                        </div>
                    </div>




