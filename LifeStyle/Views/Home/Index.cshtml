<!-- ---INTRO SLIDER--- -->
<section class="slider slider-type-2 p-0 mx-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 slider-width">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item slider-area background_bg active" data-img-src="assets/image/@Model.Sliders[0].Image" style="background: url(&quot;~/assets/image/slider-img-6.jpg&quot;) center center/cover;">
                            <div class="banner_slide_content">
                                <div class="slider-caption">
                                    <h1 class="animation animated fadeInDown" data-animation="fadeInDown" data-animation-delay="0.2s" style="animation-delay: 0.2s; visibility: visible;">@Model.Sliders[0].Name</h1>
                                    <p class="animation animated fadeInUp" data-animation="fadeInUp" data-animation-delay="0.6s" style="animation-delay: 0.6s; visibility: visible;">@Model.Sliders[0].Title</p>
                                </div>
                            </div>
                        </div>

                        @for (int i = 1; i < Model.Sliders.Count; i++)
                        {
                            <div class="carousel-item slider-area background_bg" data-img-src="assets/image/@Model.Sliders[i].Image" style="background: url(&quot;~/assets/image/slider-img-6.jpg&quot;) center center/cover;">
                                <div class="banner_slide_content">
                                    <div class="slider-caption">
                                        <h1 class="animation animated fadeInDown" style="color: #F5F5F5" data-animation="fadeInDown" data-animation-delay="0.2s" style="animation-delay: 0.2s; visibility: visible;">@Model.Sliders[i].Name</h1>
                                        <p class="animation animated fadeInUp" style="color: #F5F5F5" data-animation="fadeInUp" data-animation-delay="0.6s" style="animation-delay: 0.6s; visibility: visible;">@Model.Sliders[i].Title</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

