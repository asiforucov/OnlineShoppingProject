@model Business.ViewModels.Auth.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<section class="sign-in" id="identity">
    <div class="container">
        <div class="signin-content">
            <div class="signin-form">
                <h2 class="form-title">Şifrəni sıfırla</h2>
                <form method="POST" class="register-form" id="login-form">
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="Token" />
                    <div class="form-group">
                        <label asp-for="NewPassword" ><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="NewPassword" placeholder="Şifrə" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="ConfirmPassword" placeholder="Şifrə təkrarı" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" class="form-submit" value="Sıfırla" />
                    </div>
                </form>
                <div class="text-danger" asp-validation-summary="ModelOnly">
                </div>
               
            </div>
        </div>
    </div>
</section>