@model Business.ViewModels.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section id="login">
    <div class="container py-4 py-lg-5 my-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 box-shadow">
                    <div class="card-body">
                        <h2 class="h4 mb-1">Giriş et</h2>
                        <hr class="mt-2">
                        <div class="text-danger" asp-validation-summary="ModelOnly">
                        </div>
                        <form class="needs-validation mt-2" 
                              method="post" >
                            <input type="hidden" name="_token" value="mJDHGnPGd5TlFm3wzN6SJfzn82pgjSla5TAeEKPn">                            <div class="form-group">
                                <label for="si-email">E-poçt ünvanı</label>
                                <input class="form-control" asp-for="Email" id="si-email"
                                       placeholder="johndoe@example.com"
                                       required>
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <label for="si-password">Şifrə</label>
                                <div class="password-toggle">
                                    <input class="form-control" asp-for="Password" id="si-password"
                                           required>
                                    <label class="password-toggle-btn">
                                        <input class="custom-control-input" type="checkbox"><i class="czi-eye password-toggle-indicator"></i><span class="sr-only">Göstər Şifrə </span>
                                    </label>
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="form-group d-flex flex-wrap justify-content-between">

                                <div class="form-group">
                                    <input asp-for="RememberMe" class="mr-1"
                                           id="remember">

                                    <label asp-for="RememberMe" class="">Məni xatırla</label>
                                    <span asp-validation-for="RememberMe"></span>
                                </div>
                                <a class="font-size-sm" href="recover-password.html">
                                    Şifrəmi unutdum?
                                </a>
                            </div>
                            <button class="btn btn-primary btn-block btn-shadow" type="submit">
                                Giriş et
                            </button>
                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-12 col-sm-6 for-no-account">
                                <h6>Hesabın yoxdur? Hesab yarat</h6>
                            </div>
                            <div class="col-md-12 col-sm-6">
                                <a class="btn btn-outline-primary pull-right"
                                   asp-controller="Account" asp-action="Register">
                                    <i class="fa fa-user-circle"></i> Qeydiyyatdan keç
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
